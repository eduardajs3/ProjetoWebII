

USE produtos;
CREATE TABLE produtos (
    produto_id INTEGER PRIMARY KEY AUTO_INCREMENT,
    nome TEXT NOT NULL CHECK (CHAR_LENGTH(nome) >= 3),
    descricao TEXT,
    preco REAL NOT NULL CHECK(preco > 0),produtosprodutos
    estoque INTEGER NOT NULL CHECK(estoque >= 0),
    userInsert INT NOT NULL DEFAULT '0',
    data_hora DATETIME DEFAULT CURRENT_TIMESTAMP
);


    CREATE TABLE logs (
	produto_id INTEGER PRIMARY KEY AUTO_INCREMENT,
    acao TEXT NOT NULL,
    data_hora DATETIME DEFAULT CURRENT_TIMESTAMP,
    id INTEGER,
    userInsert INT NOT NULL DEFAULT '0',
    FOREIGN KEY (id) REFERENCES produtos(produto_id)
);